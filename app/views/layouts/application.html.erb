<!DOCTYPE html>
<html>
  <head>
    <title>SummerApp</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="layout">
      <div id="sl-header">
        <h1 id="logo"><a href="<%= root_path %>"><img src="/assets/jb-summer-logo.png"></a></h1>
        <ul class="customer-services">
           <li><%= link_to "Get App", "#sms_container"%></li>
           <li><%= link_to "About", "#about" %></li>
           <li><%= link_to "How it Works", "#how_it_works"%></li>
           <li><%= link_to "Contact", "#contact"%></li>
        </ul>
      </div>
    </div>
    <br />
    <div id="sl-container">
      <%= yield %>
    </div>
</body>
</html>
